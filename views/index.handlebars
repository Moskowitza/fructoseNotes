{{!-- This is the home page --}}



<h1>index page</h1>
<button id="scrape">New Scrape</button>

<div class="row">
    {{!-- Show my articles --}}
    <div id="indexArticles" class="col s6">
        {{!-- For every article in the DB --}}
        <ul>
            {{#each articles}}
            <li data-id={{this._id}}>
                {{this.title}}
                <a href="{{this.link}}">Link</a>
                <button class="addNote" data-id="{{this.id}}">Add Note</button>
            </li>
            {{/each}}
        </ul>
    </div>

    <div id="indexNotes" class="col s6">
        <ul>
            {{#each notes}}
            <li data-id={{this._id}}>
                {{this.title}}
            </li>
            {{/each}}
        </ul>
    </div>
</div>