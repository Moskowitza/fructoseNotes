
<div class="container">
    {{#each articles}}
    <div class="row">
        {{!-- Show my articles --}} {{!-- For every article in the DB --}}
        <div id="articles" class="col l4" data-id={{this._id}}>
            <h4> {{this.title}}</h4>
            <img src={{this.imgLink}}> {{this.bodyText}}
            <a href="{{this.link}}">Link</a>
            <button class="delete" data-id="{{this.id}}">Remove Article</button>
        </div>
        <div id="notes" class="col l4">
            {{#each note}}
            <b>{{this.title}}</b>
            {{this.body}} {{!-- Delete Button needs to be hooked up --}}
            <br>
            <button class="deleteNote" data-id="{{this.id}}">Remove Note</button>
            <hr> 
            {{/each}}
        </div>
        <div id="addNote_{{this._id}}" class="col l4" data-id={{this._id}}>
            <h6> {{this.title}} </h6>
            <input id='titleinput_{{this._id}}' name='title' placeholder="Note Title">
            <textarea id='bodyinput_{{this._id}}' name='body' placeholder="Note Body"></textarea>
            <button data-id={{this._id}} class="savenote">Save Note</button>
        </div>
    </div>
    <hr>
    {{/each}}
</div>
</div>