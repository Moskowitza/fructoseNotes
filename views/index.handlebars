{{!-- This is the home page --}}



<h1>index page</h1>
<button id="scrape">New Scrape</button>

<div class="row">
    {{!-- Show my articles --}}
    <div id="indexArticles">
        {{!-- For every article in the DB --}}
        <table>
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Picture</th>
                    <th>link</th>
                    <th>action</th>
                </tr>
            </thead>
            <tbody>
                {{#each articles}}
                <tr data-id={{this._id}}>
                    <td>
                        {{this.title}}
                    </td>
                    <td>
                        <img src={{this.imgLink}}>
                    </td>
                    <td>
                        <a href="{{this.link}}">Link</a>
                    </td>
                    <td>
                        <button class="addNote" data-id="{{this.id}}">Add Note</button>
                        <button class="delete" data-id="{{this.id}}">Remove</button>
                    </td>
                    <td id="indexNotes"></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>